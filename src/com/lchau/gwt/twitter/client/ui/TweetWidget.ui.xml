<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .widget {
      padding: 5px 3px;
    }
    
    .username {
      font-size: 16px;
      font-weight: bold;
      color: black;
      margin-left: 3px;
    }
    
    .message {
      color: gray;
      margin-left: 7px;
    }
    
    .date {
      font-size: 9px;
      color: "#D0D0D0";
      text-align: right;
    }
  </ui:style>
  <g:HTMLPanel addStyleNames="{style.widget}">
    <div>
      <span ui:field="user" class="{style.username}" />
    </div>
    <div ui:field="message" class="{style.message}" />
    <div ui:field="date" class="{style.date}" />
  </g:HTMLPanel>
</ui:UiBinder>